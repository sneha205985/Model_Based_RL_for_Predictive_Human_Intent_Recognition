# Environment Configuration Template
# Copy this file to .env and fill in your specific values

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/human_intent_rl.log

# Model Configuration
MODEL_CHECKPOINT_DIR=models/checkpoints/
MODEL_CONFIG_DIR=config/models/

# Data Configuration
DATA_ROOT_DIR=data/
DATASET_PATH=data/human_behavior/
CACHE_DIR=data/cache/

# Training Configuration
BATCH_SIZE=32
LEARNING_RATE=0.001
NUM_EPOCHS=100
DEVICE=cpu
SEED=42

# MPC Controller Configuration
MPC_HORIZON=10
MPC_CONTROL_FREQUENCY=50.0
MPC_MAX_ITERATIONS=100

# Bayesian RL Configuration
PRIOR_MEAN=0.0
PRIOR_STD=1.0
POSTERIOR_SAMPLES=1000
MCMC_WARMUP=500

# Visualization Configuration
PLOT_BACKEND=matplotlib
FIGURE_DPI=150
SAVE_PLOTS=true
PLOT_DIR=results/plots/

# Experiment Configuration
EXPERIMENT_DIR=experiments/
RESULTS_DIR=results/
NUM_RUNS=5

# Robot Configuration
ROBOT_DOF=7
ROBOT_WORKSPACE_BOUNDS=[-1.0, 1.0, -1.0, 1.0, 0.0, 2.0]
SAFETY_MARGIN=0.1

# Human Motion Configuration
HUMAN_TRACKING_FREQUENCY=30.0
GESTURE_DETECTION_THRESHOLD=0.8
HANDOVER_PREDICTION_HORIZON=2.0

# Development Configuration
DEBUG_MODE=false
VERBOSE_LOGGING=false
PROFILE_PERFORMANCE=false